{
  "name": "ts-esm-template",
  "version": "1.0.0",
  "description": "A template for node.js using typescript and esm",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./src --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "node --no-warnings --experimental-specifier-resolution=node --experimental-loader ts-node/esm --watch-path=./src ./src/index.ts",
    "start": "node --no-warnings --experimental-specifier-resolution=node ./dist/index.js",
    "build": "tsc -p tsconfig.json"
  },
  "author": "hhui64",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}